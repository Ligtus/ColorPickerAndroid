<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/layoutDialog"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_background"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content"

    android:layout_margin="20dp"

    android:padding="20dp">
        <TextView

            android:id="@+id/dialogTitle"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:padding="10dp"

            android:text="@string/delete_color_title"

            android:textAlignment="center"

            android:textColor="@color/textColor"

            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle">

            <TextView

                android:id="@+id/dialogMessage"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"

                android:layout_marginBottom="@dimen/_10sdp"

                android:text="@string/delete_color_message"

                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/confirmDialogCancel"

                    android:layout_width="@dimen/_80sdp"

                    android:layout_height="@dimen/_40sdp"

                    android:layout_marginHorizontal="@dimen/_5sdp"

                    android:text="@string/cancel_delete"
                    android:backgroundTint="@color/buttonsColor"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_8ssp"
                    app:cornerRadius="@dimen/_10sdp" />

                <Button

                    android:id="@+id/confirmDialogSuccess"

                    android:layout_width="@dimen/_80sdp"

                    android:layout_height="@dimen/_40sdp"

                    android:layout_marginHorizontal="@dimen/_5sdp"

                    android:text="@string/confirm_delete"
                    android:backgroundTint="@color/buttonsColor"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_8ssp"
                    app:cornerRadius="@dimen/_10sdp" />
            </LinearLayout>
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>